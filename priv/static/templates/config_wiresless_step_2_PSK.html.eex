<html>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <head>
    <title> Configure Farmbot's Network </title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <h1>Configure your FarmBot</h1>
    <div class="widget">
      <div class="widget-header"> <h5>Configure Wireless</h5> </div>
      <div class="widget-content">
        <form action="config_network" method="post" id="ssid_select_form">
          <fieldset>
            <input name="ssid"     hidden=true value="<%= ssid     %>">
            <input name="security" hidden=true value="<%= security %>">
            <input name="ifname",  hidden=true value="<%= ifname   %>">

            <label for="psk"> PSK </label>
            <input type="passowrd" name="psk" id="psk">

          </fieldset>

          <%= advanced_network %>

          <div class="button"> <input type=submit value="next"> </div>
        </form>
      </div>
    </div>
  </body>
</html>
